# Ladybug Hosting v7 Environment Variables

# Server Configuration
NODE_ENV=production
PORT=3000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ladybug-hosting-v7

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=12

# CORS Settings
ALLOWED_ORIGINS=https://your-ladybug-site.onrender.com,https://localhost:3000

# Bot Net Configuration
MAX_BOTS_PER_USER=10
BOT_HEARTBEAT_INTERVAL=30000
SERVER_HEALTH_CHECK_INTERVAL=60000

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# External Services
WEBHOOK_URL=https://your-webhook-url.com
NOTIFICATION_EMAIL=admin@ladybug-hosting.com

# Render.com Specific
RENDER_EXTERNAL_URL=https://your-ladybug-site.onrender.com
RENDER_EXTERNAL_HOSTNAME=your-ladybug-site.onrender.com